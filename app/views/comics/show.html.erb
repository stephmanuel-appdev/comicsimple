<div class="page-header">
  <h3>Comic #<%= @comic.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @comic.name %></dd>

      <dt>Comic url</dt>
      <dd><%= @comic.comic_url %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/comics" class="btn btn-primary">
        Back
      </a>
      <a href="/comics/<%= @comic.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_comic/<%= @comic.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
