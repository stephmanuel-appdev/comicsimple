<div class="page-header">
  <h1>
    Comics
    <a href="/comics/new" class="btn btn-lg btn-success">New Comic</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Comic url</th>
        <th>Actions</th>
      </tr>

      <% @comics.each do |comic| %>
      <tr>
        <td><%= comic.name %></td>
        <td><%= comic.comic_url %></td>
        <td>
          <a href="/comics/<%= comic.id %>" class="btn btn-primary">Show</a>
          <a href="/comics/<%= comic.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_comic/<%= comic.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @comics, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
